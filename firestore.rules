rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /secrets/{document} {
      allow read: if false;  // No client-side access
      allow write: if false; // No client-side access
    }
    
    // Add your existing rules for other collections here
    match /subscriptions/{subscriptionId} {
      allow read, write: if request.auth != null; // Allow authenticated users to read/write subscriptions
    }

    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId; // Allow users to read/write their own data
    }

    // Add more rules as necessary for your application
  }
}
