
{
  "manifest_version": 3,
  "name": "ChroMarx",
  "version": "1.0.0",
  "description": "Your Chrome-Powered Bookmark Manager â€“ Organize, Optimize, Excel! Enhance your browsing experience with Chrome's native features.",
  "permissions": [
    "identity",
    "identity.email",
    "storage",
    "bookmarks",
    "sidePanel",
    "tabs",
    "translate",
    "scripting",
    "search"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "oauth2": {
    "client_id": "46339279287-egph5d4pqcvv116drdh1tsvfjq5db81o.apps.googleusercontent.com",
    "scopes": [
      "https://www.googleapis.com/auth/userinfo.email",
      "https://www.googleapis.com/auth/userinfo.profile"
    ]
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+B",
        "mac": "Command+Shift+B"
      },
      "description": "Open ChroMarx side panel"
    },
    "toggle-theme": {
      "suggested_key": {
        "default": "Alt+Shift+T",
        "mac": "Command+Shift+T"
      },
      "description": "Toggle between light and dark theme"
    },
    "quick-add": {
      "suggested_key": {
        "default": "Alt+Shift+A",
        "mac": "Command+Shift+A"
      },
      "description": "Quick add current page to bookmarks"
    }
  },
  "side_panel": {
    "default_path": "index.html"
  },
  "action": {
    "default_title": "Open ChroMarx",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "author": "ChroMarx Team",
  "homepage_url": "https://chromarx.it.com",
  "minimum_chrome_version": "116",
  "offline_enabled": true,
  "short_name": "ChroMarx"
}
