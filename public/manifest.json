{
  "manifest_version": 3,
  "name": "ChroMarx",
  "version": "1.0.0",
  "description": "A powerful bookmark manager for Chrome",
  "permissions": [
    "bookmarks",
    "storage",
    "identity",
    "sidePanel"
  ],
  "oauth2": {
    "client_id": "46339279287-o0hkmkeho7uom3po0v2kvo9s48eui91p.apps.googleusercontent.com",
    "scopes": [
      "https://www.googleapis.com/auth/userinfo.email",
      "https://www.googleapis.com/auth/userinfo.profile"
    ]
  },
  "side_panel": {
    "default_path": "index.html"
  },
  "action": {
    "default_title": "ChroMarx",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
  }
}