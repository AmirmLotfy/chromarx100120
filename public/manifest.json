
{
  "manifest_version": 3,
  "name": "ChroMarx",
  "version": "1.1.0",
  "description": "Your AI-Powered Bookmark Manager â€“ Organize, Optimize, Excel! Enhance your browsing experience with AI-powered bookmarking.",
  "permissions": [
    "storage",
    "bookmarks",
    "sidePanel",
    "tabs",
    "unlimitedStorage"
  ],
  "optional_permissions": [
    "history",
    "offline"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+B",
        "mac": "Command+Shift+B"
      },
      "description": "Open ChroMarx side panel"
    },
    "toggle-theme": {
      "suggested_key": {
        "default": "Alt+Shift+T",
        "mac": "Command+Shift+T"
      },
      "description": "Toggle between light and dark theme"
    },
    "quick-add": {
      "suggested_key": {
        "default": "Alt+Shift+A",
        "mac": "Command+Shift+A"
      },
      "description": "Quick add current page to bookmarks"
    },
    "advanced-search": {
      "suggested_key": {
        "default": "Alt+Shift+S",
        "mac": "Command+Shift+S"
      },
      "description": "Open advanced search"
    }
  },
  "side_panel": {
    "default_path": "index.html"
  },
  "action": {
    "default_title": "Open ChroMarx",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "offline_enabled": true,
  "minimum_chrome_version": "88",
  "author": "ChroMarx Team",
  "homepage_url": "https://chromarx.it.com",
  "incognito": "split",
  "web_accessible_resources": [{
    "resources": ["notification.mp3", "icons/*.png"],
    "matches": ["<all_urls>"]
  }],
  "version_name": "1.1.0 (Stable)",
  "short_name": "ChroMarx"
}
